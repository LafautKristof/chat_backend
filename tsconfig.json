{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "dist",
        "rootDir": "src",

        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
